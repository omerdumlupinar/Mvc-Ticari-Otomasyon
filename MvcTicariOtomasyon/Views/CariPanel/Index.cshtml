@model MvcTicariOtomasyon.Models.Sınıflar.Cariler
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_CariLayout.cshtml";
}

<br />
<h2>Ticari Otomasyon Cari Bilgi Paneli</h2>

@using (Html.BeginForm("Index2", "CariPaneli", FormMethod.Post))
{
    <table class="table table-hover">
        <tr>
            <td><label>Mail Adresi:<h6>@HttpContext.Current.User.Identity.Name</h6></label></td>
        </tr>
        <tr>
            <td>@Html.TextBoxFor(x => x.cariAd, new { @class = "form-control" })</td>
        </tr>

        <tr>
            <td>@Html.TextBoxFor(x => x.cariSoyad, new { @class = "form-control" })</td>
        </tr>

        <tr>
            <td>@Html.TextBoxFor(x => x.cariSehir, new { @class = "form-control" })</td>
        </tr>

        <tr>
            <td>@Html.TextBoxFor(x => x.cariSifre, new { @class = "form-control" })</td>
        </tr>
    </table>
    <button class="btn btn-success">Bilgileri Güncelle</button>
}

