@model MvcTicariOtomasyon.Models.Sınıflar.Cariler
@{
    ViewBag.Title = "cariGetir";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h2> Cari Güncelleme Sayfası</h2>
<br />
@using (Html.BeginForm("cariGuncelle", "Cari", FormMethod.Post))
{
    <div class="form form-group">
        @Html.HiddenFor(x => x.cariID)
        <br />
        <label>Adı</label>
        @Html.TextBoxFor(x => x.cariAd, new { @class = "form form-control" })
        @Html.ValidationMessageFor(x => x.cariAd, "", new { @class = "text-danger" })
        <br />
        <label>Soyad</label>
        @Html.TextBoxFor(x => x.cariSoyad, new { @class = "form form-control" })
        @Html.ValidationMessageFor(x => x.cariSoyad, "", new { @class = "text-danger" })
        <br />
        <label>Şehir</label>
        @Html.TextBoxFor(x => x.cariSehir, new { @class = "form form-control" })
        @Html.ValidationMessageFor(x => x.cariSehir, "", new { @class = "text-danger" })
        <br />
        <label>Mail</label>
        @Html.TextBoxFor(x => x.cariMail, new { @class = "form form-control" })
        @Html.ValidationMessageFor(x => x.cariMail, "", new { @class = "text-danger" })
        <br />
        <button class="btn btn-primary">Cari Güncelle</button>
    </div>
}

