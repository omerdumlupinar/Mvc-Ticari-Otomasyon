@using MvcTicariOtomasyon.Models.Sınıflar
@model List<Personel>
@{
    ViewBag.Title = "PersonelListe";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<!-- Google Font: Source Sans Pro -->
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
<!-- Font Awesome -->
<link rel="stylesheet" href="~/AdminLTE-3.2.0/plugins/fontawesome-free/css/all.min.css">
<!-- Theme style -->
<link rel="stylesheet" href="~/AdminLTE-3.2.0/dist/css/adminlte.min.css">




<div class="card card-solid">
    <div class="card-body pb-0">
        <div class="row">

            @foreach (var x in Model)
            {



                <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch flex-column">
                    <div class="card bg-light d-flex flex-fill">
                        <div class="card-header text-muted border-bottom-0">
                            
                        </div>
                        <div class="card-body pt-0">
                            <div class="row">
                                <div class="col-7">
                                    <h2 class="lead"><b>@x.personelAd @x.personelSoyad</b></h2>
                                    <p class="text-muted text-sm"><b>Departman:</b> @x.Departman.departmanAd</p>
                                    <ul class="ml-4 mb-0 fa-ul text-muted">
                                        <li class="small"><span class="fa-li"><i class="fas fa-lg fa-building"></i></span> Address: @x.personelAdres</li>
                                        <li class="small"><span class="fa-li"><i class="fas fa-lg fa-phone"></i></span> Phone: @x.personelTelefon</li>
                                    </ul>
                                </div>
                                <div class="col-5 text-center">
                                    <img src="@x.personelGorsel" alt="user-avatar" class="img-circle img-fluid">
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <div class="text-right">
                                <a href="#" class="btn btn-sm bg-teal">
                                    <i class="fas fa-comments"></i>
                                </a>
                                <a href="PersonelSatıs/@x.personelID" class="btn btn-sm btn-primary">
                                    <i class="fas fa-user"></i>Satış Geçmişi
                                </a>
                            </div>
                        </div>
                    </div>
                </div>




            }
        </div>
    </div>
</div>


<!-- /.content -->
<!-- jQuery -->
<script src="~/AdminLTE-3.2.0/plugins/jquery/jquery.min.js"></script>
<!-- Bootstrap 4 -->
<script src="~/AdminLTE-3.2.0/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
<!-- AdminLTE App -->
<script src="~/AdminLTE-3.2.0/dist/js/adminlte.min.js"></script>
<!-- AdminLTE for demo purposes -->
<script src="~/AdminLTE-3.2.0/dist/js/demo.js"></script>


