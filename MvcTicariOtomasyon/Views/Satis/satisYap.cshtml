@model MvcTicariOtomasyon.Models.Sınıflar.SatisHareket
@{
    ViewBag.Title = "satisYap";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<h2>Yeni Satış Sayfası</h2>
<br />
<form class="form form-group" method="post">

    <label class="form-group">Ürün Adı</label>
    @Html.DropDownListFor(x => x.urunid, (List<SelectListItem>)ViewBag.u, new { @class = "form form-control"})
    <br />

    <label class="form-group">Personel</label>
    @Html.DropDownListFor(x => x.personelid, (List<SelectListItem>)ViewBag.p, new { @class = "form form-control" })
    <br />

    <label class="form-group">Cari Adı</label>
    @Html.DropDownListFor(x => x.cariid, (List<SelectListItem>)ViewBag.c, new { @class = "form form-control" })
    <br />
    <label class="form-group">Fiyat</label>
    @Html.TextBoxFor(x => x.satisHateketFiyat, new { @class = "form form-control" })
    <br />
    <label class="form-group">Adet</label>
    @Html.TextBoxFor(x => x.satisHateketAdet, new { @class = "form form-control" })
    <br />
    <label class="form-group">Toplam Tutar</label>
    @Html.TextBoxFor(x => x.satisHateketToplamTutar, new { @class = "form form-control" })
    <br />
    <button class="btn btn-primary">Satış Onayla</button>
</form>